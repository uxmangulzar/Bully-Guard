<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activities.ChildHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="right"
            android:src="@drawable/logobullyguard"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            ></ImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivChild"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/c3"
            android:layout_gravity="center"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            >

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_logout_24"
                android:id="@+id/ivLogout"
                ></ImageView>

            <TextView
                android:layout_weight="2.3"

                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scott Travis"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/normal"
                android:textSize="@dimen/_12sdp"

                android:gravity="center"
                ></TextView>
            <ImageView
                android:layout_weight="0.2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_battery_4_bar_24"
                >

            </ImageView>

            <TextView
                android:layout_weight="0.5"

                android:id="@+id/tv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="46%"
                android:textColor="#ffa500"
                android:layout_marginTop="@dimen/_2sdp"
                ></TextView>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/newg"
            android:layout_marginTop="@dimen/_15sdp"
            >

            <com.google.android.material.tabs.TabLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/tabLayout"
                app:tabMode="fixed"
                android:layout_marginLeft="@dimen/_30sdp"
                app:tabGravity="fill"
                app:tabIndicatorGravity="center"
                app:tabTextColor="@color/dark_blue"
                app:tabIndicatorAnimationMode="fade"
                android:background="@drawable/tab_indicator1"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@color/white"

                />

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewPager2"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>







