<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_500sdp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChildHomeFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling today?"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_28sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/normal3"
            android:layout_marginTop="@dimen/_20sdp"
            tools:ignore="MissingConstraints"></TextView>


        <LinearLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_180sdp"
            android:orientation="vertical"
            android:background="#f2f5f8"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_5sdp"



                android:layout_marginRight="@dimen/_30sdp"
                >

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/mood2"


                    ></ImageView>

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/mood3"
                    android:layout_marginLeft="@dimen/_25sdp"
                    ></ImageView>
                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/mood4"
                    android:layout_marginLeft="@dimen/_28sdp"
                    ></ImageView>






            </LinearLayout>



            <Button
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/dark_blue"
                android:hint="We Need to Talk ?"
                android:fontFamily="@font/normal"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:background="@drawable/border2"
                android:layout_marginTop="@dimen/_35sdp"
                android:textStyle="bold"
                android:id="@+id/need_talk"
                ></Button>




        </LinearLayout>



        <LinearLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_120sdp"
            android:orientation="vertical"
            android:background="#fff8f6"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Installed Apps"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/normal3"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <LinearLayout
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="#fff8f6"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scrollbars="horizontal"

                        />


                </LinearLayout>






<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_55sdp"-->
<!--                    android:layout_height="@dimen/_55sdp"-->
<!--                    android:src="@drawable/app1"-->


<!--                    ></ImageView>-->
<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_55sdp"-->
<!--                    android:layout_height="@dimen/_55sdp"-->
<!--                    android:src="@drawable/app2"-->
<!--                    android:layout_marginLeft="@dimen/_10sdp"-->

<!--                    ></ImageView>-->
<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_55sdp"-->
<!--                    android:layout_height="@dimen/_55sdp"-->
<!--                    android:src="@drawable/app3"-->
<!--                    android:layout_marginLeft="@dimen/_10sdp"-->

<!--                    ></ImageView>-->
<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_55sdp"-->
<!--                    android:layout_height="@dimen/_55sdp"-->
<!--                    android:src="@drawable/app4"-->
<!--                    android:layout_marginLeft="@dimen/_10sdp"-->

<!--                    ></ImageView>-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    android:id="@+id/navigation"

                    ></ImageView>
            </LinearLayout>
        </LinearLayout>





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/control_bar"
            android:id="@+id/profile"
            ></ImageView>

    </LinearLayout>






</LinearLayout>