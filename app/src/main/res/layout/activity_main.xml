<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activities.StartActivity">


    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_90sdp"
        android:src="@drawable/logo"


        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view"
        android:text="The key to your child's online safety"
        android:layout_gravity="center"
        android:fontFamily="@font/daysone"

        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        />

    <Button
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/orange"
        android:hint="Log In to Parent side"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/normal"
        android:layout_marginTop="@dimen/_70sdp"
        android:id="@+id/bt_login_parent"
        android:background="@drawable/border2"
        ></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/orange"
        android:fontFamily="@font/daysone"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_14sdp"
        ></TextView>


    <Button
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/dark_blue"
        android:hint="Log In to Children side"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/normal"
        android:layout_marginTop="@dimen/_14sdp"
        android:id="@+id/bt_login_childern"
        android:background="@drawable/border2"
        ></Button>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/daysone"
            android:text="How to connect ? Click here"
            android:textColor="@color/orange"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/_20sdp"

            android:id="@+id/tv_how_to_connect"
            ></TextView>


    </RelativeLayout>




</LinearLayout>